{
    "restartable": "rs",
    "ignore": [
        ".git",
        ".svn",
        "node_modules/**/node_modules",
        "logs/*",
        ".vscode",
        ".idea",
        ".log"
    ],
    "verbose": true,
    "exec": "cross-env NODE_ENV=test nodemon --exec babel-node server/app.js",
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "ejs js json"
}